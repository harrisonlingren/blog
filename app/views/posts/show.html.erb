<div class="container">
  <h2>
    <%= @post.title %>
  </h2>

  <%= markdown.render(@post.text) %>

  <br/>
</div>

<hr/>

<div class="container">
  <h3>Comments</h3>
  <div class="container">
    <% @post.comments.each do |comment| %>

        <h5><strong>
          <%= comment.user %>
        </strong></h5>
        <div class="container">
          <%= markdown.render(comment.body) %>
        </div>
        <br/>

    <% end %>
  </div>
</div>

<hr/>

<div class="container">
  <h2>Add a comment:</h2><br/>
  <%= form_for([@post, @post.comments.build]) do |f| %>
      <div class="form-group">
        <%= f.label :user %><br/>
        <%= f.text_field :user, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :body %><br/>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit :class => "btn btn-default" %>
      </div>
  <% end %>
</div>

<br/>
<hr/>

<div class="container">
  <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-default" %>
  <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-default" %>
  <br/><br/>
  <%= link_to 'Back', posts_path, :class => "btn btn-default" %>
  <br/><br/>
</div>

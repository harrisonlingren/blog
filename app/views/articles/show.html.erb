<div class="container">
  <h2>
    <%= @article.title %>
  </h2>

  <p>
    <%= @article.text %>
  </p>

  <h3>Comments</h3>
  <% @article.comments.each do |comment| %>
      <p>
        <strong>User:</strong>
        <%= comment.commenter %>
      </p>

      <p>
        <%= comment.body %>
      </p>
  <% end %>

</div>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <div class="form-group">
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %><br>
      <%= f.text_area :body, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-default" %>
    </div>
<% end %>

<%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-default" %>
<td><%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-default" %></td>

<%= link_to 'Back', articles_path, :class => "btn btn-default" %>